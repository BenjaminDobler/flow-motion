{
  "name": "flow-motion",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/flow-motion/src",
  "prefix": "lib",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],

      "options": {
        "project": "libs/flow-motion/ng-package.json",
        "tsConfig": "libs/flow-motion/tsconfig.lib.json",
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/flow-motion/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}",
        "access": "public"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/libs/flow-motion"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
